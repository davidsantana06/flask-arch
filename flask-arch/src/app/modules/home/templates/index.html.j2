{% extends template('_base') %}
{% from template('_macros') import footer %}
{% from template('__macros') import text_box %}


{% block title %}Home{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ url_for('.static', filename='css/style.css') }}">
    <link rel="stylesheet" href="{{ url_for('.static', filename='css/index.css') }}">
{% endblock %}

{% block content %}
    <main class="container d-flex align-items-center">
        <div class="w-100">
            <div id="fda" class="d-flex align-items-center justify-content-center">
                <img class="me-3" src="{{ url_for('static', filename='images/fda.png') }}">
                <div>
                    <h1 class="fw-semibold">Flask Arch</h1>
                    <p>Modular Architecture</p>
                </div>
            </div>
            <div class="mb-3">
                {{ text_box(title='Welcome to Flask Arch!') }}
            </div>
            {{ footer() }}
        </div>
    </main>
{% endblock %}
